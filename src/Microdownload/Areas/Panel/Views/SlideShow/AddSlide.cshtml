@model SlideShowViewModel
@{
    ViewData["Title"] = "افزودن اسلاید";
}
<form asp-controller="SlideShow"
      asp-action="AddSlide"
      method="post"
      enctype="multipart/form-data"
      class="form-horizontal">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewData["Title"]</h3>
        </div>
        <div class="panel-body">

            @{ await Html.RenderPartialAsync("_CustomValidationSummary").ConfigureAwait(false); }
            <div class="form-group">
                <label asp-for="Title" class="col col-lg-2 control-label"></label>
                <div class="col col-lg-8 controls">

                    <input asp-for="Title" class="form-control col col-md-10" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Link" class="col col-lg-2 control-label"></label>
                <div class="col col-lg-8 controls">
                    <input dir="ltr" asp-for="Link" class="form-control col col-md-10" />
                    <span asp-validation-for="Link" class="text-danger"> </span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="col col-lg-2 control-label"></label>
                <div class="col col-lg-8 controls">
                    <input asp-for="Description" class="form-control col col-md-10" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Order" class="col col-lg-2 control-label"></label>
                <div class="col col-lg-4 controls">
                    <input type="number" dir="ltr" asp-for="Order" class="form-control col col-md-4" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="top20">
                    <label asp-for="Image" class="col col-lg-2 control-label"></label>
                    <div class="col col-lg-8 controls">
                        <input asp-for="Photo" type="file" class="form-control col col-md-10 file" data-preview-file-type="text" data-rtl="true" data-language="fa" data-show-Preview="true">
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-4 col-xs-6 col-lg-4">

                    </div>
                    <div class="text-right col-md-6 col-xs-6">
                        <div class="row">
                            <button class="btn btn-success"> <i class="fa fa-save fa-lg"></i> ذخیره</button>
                            <a class="btn btn-danger" asp-area="@AreaConstants.PanelArea" asp-controller="SlideShow" asp-action="Index"> بازگشت  <i class="fa  fa-angle-double-left "> </i></a>

                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</form>

@section Styles {
    <link href="~/css/fileinput.min.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts
    {
    <script src="~/js/fileinput.min.js" type="text/javascript" asp-append-version="true"></script>
}