@model SlideShowViewModel
@inject IOptionsSnapshot<SiteSettings> SiteOptions

@{
    ViewData["Title"] = "وبرایش اسلاید";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@ViewData["Title"]</h3>
    </div>
    <div class="panel-body">
        <form asp-controller="SlideShow"
              asp-action="EditSlide"
              method="post"
              enctype="multipart/form-data"
              class="form-horizontal">
            @{ await Html.RenderPartialAsync("_CustomValidationSummary").ConfigureAwait(false); }
            <input asp-for="Id" hidden="hidden" />
            <div class="form-group">
                <label asp-for="Title" class="col col-lg-2 control-label"></label>
                <div class="col col-lg-8 controls">

                    <input asp-for="Title" class="form-control col col-md-8" />
                    <span asp-validation-for="Title"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Link" class="col col-lg-2 control-label"></label>
                <div class="col col-lg-8 controls">
                    <input dir="ltr" asp-for="Link" class="form-control col col-md-8" />
                    <span asp-validation-for="Link"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="col col-lg-2 control-label"></label>
                <div class="col col-lg-8 controls">
                    <input asp-for="Description" class="form-control col col-md-8" />
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Order" class="col col-lg-2 control-label"></label>
                <div class="col col-lg-8 controls">
                    <input type="number" dir="ltr" asp-for="Order" class="form-control col col-md-8" />
                    <span asp-validation-for="Order"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Image" class="col col-lg-2 control-label"></label>
                <div class="col col-lg-8 controls">
                    <img src="~/@SiteOptions.Value.SlideShowImageFolder/@Model.Image" asp-append-version="true" alt="photo" class="img-responsive img-thumbnail" />
                </div>
            </div>



            <div class="form-group">
                <div class="top20">
                    <label asp-for="Image" class="col col-lg-2 control-label"></label>
                    <div class="col col-lg-8 controls">
                        <input asp-for="Photo" type="file" class="form-control col col-md-8 file" data-preview-file-type="text" data-rtl="true" data-language="fa" data-show-Preview="true">
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-4 col-xs-6 col-lg-4">

                    </div>
                    <div class="text-right col-md-6 col-xs-6">
                        <div class="row">
                            <button class="btn btn-success"> <i class="fa fa-save fa-lg"></i> ذخیره</button>
                            <a class="btn btn-danger" asp-area="@AreaConstants.PanelArea" asp-controller="SlideShow" asp-action="Index"> بازگشت  <i class="fa  fa-angle-double-left "> </i></a>

                        </div>

                    </div>
                </div>
            </div>
        </form>

    </div>


</div>

@section Styles {
    <link href="~/css/fileinput.min.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts
    {
    <script src="~/js/fileinput.min.js" type="text/javascript" asp-append-version="true"></script>
}