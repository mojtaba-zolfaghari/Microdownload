@model IEnumerable<SlideShowViewModel>
@inject IOptionsSnapshot<SiteSettings> SiteOptions

<table id="all-roles-list" class="table table-striped table-hover table-bordered table-condensed">
    <tr>
        <th class="text-center">تصویر</th>
        <th class="text-center">عنوان</th>
        <th class="text-center">لینک</th>
        <th class="text-center">ترتیب</th>
        <th class="text-center">توضیحات</th>
        <th class="text-center">دستورات</th>

    </tr>
    @if (!Model.Any())
            {
        <tr>
            <td colspan="5" class="text-center">اسلایدی یافت نشد</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
           
            <tr>
                <td class="text-center">
                <img src="~/@SiteOptions.Value.SlideShowImageFolder/@item.Image" asp-append-version="true" alt="photo" class="img-responsive img-thumbnail slidemng"/> 
                </td>
                <td class="text-center">@item.Title</td>
                <td class="text-center">@item.Link</td>
            
                <td class="text-center">@item.Order</td>

                
                <td class="text-center">@item.Description</td>

          
                <td class="text-center">
                    <a asp-controller="SlideShow" asp-action="EditSlide"  asp-route-Id="@item.Id" class="btn btn-sm btn-primary">ویرایش</a>
                          
                    <a href="#" id="btnDelete-@item.Id" data-delete-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>

            </tr>
        }
    }
</table>