@model PagingViewModel<WalletViewModel>
@{
    ViewData["Title"] = "کیف پول";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="panel-heading">
                <div class="col-md-6">
                    <h3 class="panel-title">@ViewData["Title"]</h3>
                </div>
                <div class="col-md-6">
                    <div class="btn-group pull-right">
                        <a class="btn btn-success" asp-controller="Wallet" asp-action="WalletCharge" asp-area="@AreaConstants.PanelArea"><i class="fa fa-money"> </i> شارژ کیف پول </a>
                        <a class="btn btn-danger" asp-controller="Wallet" asp-action="Withdrawal" asp-area="@AreaConstants.PanelArea"><i class="fa fa-money"> </i> برداشت از کیف پول </a>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="alert alert-warning">
            <a href="#" class="close" data-dismiss="alert">×</a>
            <h2>توضیحات !</h2>
            <p>
                در این قسمت شما قادر به مشاهده موجودی کیف پول و تراکنش های انجام شده با آن هستید. با استفاده از دکمه شارژ کیف پول قادر خواهید بود تا اعتبار کیف پول خود را افزایش داده و از آن در خرید های خود استفاده نمایید.
            </p>
        </div>
        <div class="row">

            <div class="col-md-12 top20">
                <h2 class="top30">
                    موجودی کیف پول شما : <span class="redcolor">@ViewBag.WalletInventory</span>  تومان
                </h2>
                <h5 class="top5">
                    معادل :
                    <span class="redcolor">@ViewBag.WalletInventoryLettersFa</span>  تومان
                </h5>

            </div>
        </div>
        @{ await Html.RenderPartialAsync("_AllTWalletList", Model).ConfigureAwait(false); }



    </div>


</div>

@section Scripts
    {
    <script src="~/server/assets/js/core/MvcGrid.js"></script>
}