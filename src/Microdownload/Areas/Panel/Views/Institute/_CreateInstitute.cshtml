@model InstituteViewModel
@{List<User> _ListUser = (List<User>)ViewData["ListUser"]; }


<script type="text/javascript">

    $('.dselect2').select2();
    $('#Amount').number(true, 0);

</script>

<partial name="_CustomValidationSummary" />
<form asp-action="AddCourse" method="post" class="form-horizontal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                @if (string.IsNullOrEmpty(Model?.Id.ToString()))
                {
                    <h4 class="modal-title">افزودن آموزشگاه جدید</h4>
                }
                else
                {
                    <h4 class="modal-title">ویرایش آموزشگاه</h4>
                }
            </div>
            <div class="modal-body">

                <input asp-for="Id" hidden="hidden" />
                <div class="form-group">
                    <label asp-for="InstituteName" class="col col-lg-3 control-label"></label>
                    <div class="col col-lg-9 controls">
                        <div class="input-group top15">
                            <input dir="rtl" asp-for="InstituteName" class="form-control" />
                            <div class="input-group-addon" dir="ltr">فارسی</div>
                        </div>
                        <span asp-validation-for="InstituteName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="col col-lg-3 control-label"></label>
                    <div class="col col-lg-9 controls">
                        <div class="input-group top15">
                            <textarea dir="rtl" asp-for="Description" class="form-control"> </textarea>
                            <div class="input-group-addon" dir="ltr">فارسی</div>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="col col-lg-3 control-label"></label>
                    <div class="col col-lg-9 controls">
                        <div class="input-group top15">
                            <input placeholder="09..." dir="ltr" asp-for="Phone" class="form-control" />
                            <div class="input-group-addon" dir="ltr">عدد انگلیسی</div>
                        </div>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group">
                    <label asp-for="UserId" class="col col-lg-3 control-label"></label>
                    <div class="col col-lg-9 controls">
                        <select asp-for="UserId" class="form-control dselect2" style="width:100%">
                            <option value="" disabled selected hidden>انتخاب کنید</option>
                            @{
                                foreach (var item in _ListUser)
                                {
                                    <option value="@item.Id">@item.DisplayName</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="UserId" class="text-danger"></span>

                    </div>
                </div>






                <div class="form-group">
                    <label asp-for="Address" class="col col-lg-3 control-label"></label>
                    <div class="col col-lg-9 controls">
                        <div class="input-group top15">
                            <textarea placeholder="استان - شهرستان - آدرس کامل + پلاک" dir="rtl" asp-for="Address" class="form-control" />
                            <div class="input-group-addon" dir="ltr">فارسی</div>
                        </div>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>






                @*@if (string.IsNullOrEmpty(Model?.Id.ToString()))
        {
            <h4 class="modal-title">افزودن بیمه جدید</h4>
        }*@

            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="submit">ثبت</button>
                <button class="btn" data-dismiss="modal" aria-hidden="true">انصراف</button>
            </div>
        </div>
    </div>
</form>
