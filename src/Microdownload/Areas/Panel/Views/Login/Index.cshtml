@model LoginViewModel
@{
    ViewData["Title"] = "ورود به پورتال";
}
<div class="panel panel-default top30 col-md-6 col-md-push-3">
    <div class=" panel-heading center text-center">
        <img class="img-responsive" src="~/images/logo-MellatIns.png" alt="ورود به پورتال" />
    </div>
    <div class="panel-body">

        <form asp-controller="Login"
              asp-action="Index"
              asp-route-returnurl="@ViewData["ReturnUrl"]"
              method="post"
              autocomplete="off"
              class="form-horizontal top30">
            @{ await Html.RenderPartialAsync("_CustomValidationSummary").ConfigureAwait(false); }


            <div class="form-group">
                <label asp-for="Username" class="col-md-3 control-label col-md-push-1"></label>
                <div class="controls col col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="icon-user"></span>
                        </span>
                        <input asp-for="Username" autocomplete="off" dir="ltr" class="form-control" placeholder="user+YourCode" />

                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-md-3 control-label col-md-push-1"></label>
                <div class="controls col col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="icon-lock2"></span>
                        </span>
                        <input asp-for="Password" dir="ltr" class="form-control" />

                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col col-md-3 control-label col-md-push-1">
                    کد امنیتی
                </label>
                <div class="controls col col-md-6">
                    <dnt-captcha asp-captcha-generator-max="50"
                                 asp-captcha-generator-min="1"
                                 asp-captcha-generator-language="Persian"
                                 asp-font-name="Tahoma"
                                 asp-font-size="20"
                                 asp-fore-color="#333333"
                                 asp-placeholder="کد امنیتی به رقم"
                                 asp-back-color="#ccc"
                                 asp-text-box-class="text-box single-line form-control"
                                 asp-text-box-template="<div class='input-group'><span class='input-group-addon'><span class='glyphicon glyphicon-lock'></span></span>{0}</div>"
                                 asp-validation-message-class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-6">
                    <div class="checkbox">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe"> </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-6">
                    <button type="submit" class="btn btn-info col-md-6 animated flash">ورود</button>
                </div>
            </div>
        </form>
    </div>
    <footer class="panel-footer">
        <p>
            <a asp-action="Index" asp-controller="ForgotPassword">کلمه‌ی عبور خود را فراموش کرده‌اید؟</a>
        </p>
    </footer>
</div>





