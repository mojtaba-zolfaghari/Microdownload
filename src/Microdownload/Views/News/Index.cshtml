@model PagingViewModel<MelatNewsViewModel>
@{
    ViewData["Title"] = "اخبار بیمه ملت";
}
<!-- Page Title
============================================= -->
<section id="page-title">

    <div class="container clearfix">
        <h1>@ViewData["Title"]</h1>
        <span></span>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/">خانه</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>


    </div>

</section><!-- #page-title end -->

<section id="content">

    <div class="content-wrap">

        <div class="container clearfix">

            @foreach (var item in Model.List)
            {

                <div class="card top20">
                    <div class="card-header"><a href="@item.Link" target="_blank">@Html.Raw(item.Title)</a></div>
                    <div class="card-body">
                        <div class="author-image">
                            <img src="@item.ImgUrl" alt="" class="rounded-circle">
                        </div>
                        <p>@Html.Raw(item.Text)</p>          
                    </div>
                    <div class="card-footer">@Html.Raw(item.Published)</div>
                </div>




            }

            <div align="center" class="text-center top25">

                <cs-pager cs-paging-info="@Model.Paging"
                          asp-action="Index" asp-controller="News"
                          asp-route-pagesize="@Model.Paging.ItemsPerPage"
                          cs-show-first-last="true"
                          cs-suppress-empty-nextprev="true"
                          cs-suppress-inactive-firstlast="true"
                          cs-first-page-text="ابتدا"
                          cs-last-page-text="انتها"
                          cs-pager-li-current-class="page-item active"
                          cs-pager-ul-class="pagination nobottommargin"
                          cs-pager-li-other-class="page-item"
                          cs-pager-link-other-class="page-link"
                          cs-pager-link-current-class="page-link"
                          cs-pager-li-non-active-class="page-item disabled"></cs-pager>
                

            </div>
        </div>

    </div>

</section><!-- #content end -->